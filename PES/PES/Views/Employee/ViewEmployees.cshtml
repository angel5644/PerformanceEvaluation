@section Scripts {
    @*<script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap.min.js")
    @Scripts.Render("~/Scripts/enable-disable.js")
    @*@Scripts.Render("~/Scripts/showEmployees.js")*@

    <script type="text/javascript">
        $(document).ready(function () {
            $("#table-employees").DataTable();

            var enable = $("#showEnables").is(':checked');
            var disable = $('#showDisables').is(':checked');
            var both = $("#showBoth").is(':checked');
            var filter = "enable";
            var EmployeeEmail = $("#EmailUser").val();

            if (enable) {
                filter = "enable";                
            }
            else if (disable) {
                filter = "disable";               
            }
            else {
                filter = "both";                
            }

            // Events 
            $("#showEnables").on("click", function (e) {
                // Execute function 
                
                // Email user
                var emailUser = $("#EmailUser").val();
                // Filter 
                var filter = $(this).val();

                validateFilters(emailUser, filter);                
            });

            // Events 
            $("#showDisables").on("click", function (e) {
                // Execute function 

                // Email user
                var emailUser = $("#EmailUser").val();
                // Filter 
                var filter = $(this).val();

                validateFilters(emailUser, filter);
            });

            // Events 
            $("#showBoth").on("click", function (e) {
                // Execute function 

                // Email user
                var emailUser = $("#EmailUser").val();
                // Filter 
                var filter = $(this).val();

                validateFilters(emailUser, filter);
            });
           
         });

        function validateFilters(employeeEmail, filter)
        {
            $.ajax({
                url: "/Employee/GetEmployeesByFilter",
                //dataType: "html",
                data: {
                    employeeEmail: employeeEmail,
                    filter: filter
                }
            })
            .done(function (data) {
                if (data) {
                    //success ajax
                    // Populate table with data from ajax call
                    $("table-content").html("");
                    $("#table-content").html(data).fadeOut("fast").fadeIn("slow");

                    // Re init datatable
                    $("#table-employees").DataTable();
                }
                else {
                    // Error
                    alert("Error getting employees");
                }
            })
            .fail(function (jqxhr, textStatus, error) {
                alert("Error while  getting employees. Please try again later.");
            })
            .always(function () {
                //alert("finished");
            });
        }
    </script>
}

