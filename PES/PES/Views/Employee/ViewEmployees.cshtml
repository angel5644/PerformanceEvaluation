@model IEnumerable<PES.ViewModels.EmployeeDetailsViewModel>

<hr />
<div class="row">
                <div class="col-md-6">
                    <p>
                        @Html.ActionLink("Create New", "InsertEmployee")
                    </p>
            </div>
    <hr />
    <div class="col-md-12">
        <div class="well responsive">
            <div>
                
            </div>
            <table class="table" id="table-employees">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        Porfile
                    </th>
                     <th>
                       Manager
                    </th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                             @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                        @(item.Profile.Name)
                        </td>
                        <td>
                            @(item.Manager.FirstName + " " + item.Manager.LastName)
                        </td>
                        <td>
                                @Html.ActionLink("Edit", "UpdateEmployee", new { id = item.EmployeeId }, null) |
                                @Html.ActionLink("Details", "EmployeeDetails", "Employee", new { id = item.EmployeeId }, null) |
                                @Html.ActionLink("Disable", "Delete", new { id = item.EmployeeId }, null)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    @*<script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap.min.js")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#table-employees").DataTable();
        })
    </script>
}

@section Styles{
    @Styles.Render("~/Content/datatables/dataTables.bootstrap.min.css")
    @Styles.Render("~/Content/ExportDataTables/buttons.dataTables.min.css")
}