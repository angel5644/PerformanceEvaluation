@*@model PES.ViewModels.EmployeeDetailsViewModel*@

@{
    ViewBag.Title = "TransferEmployees";
}

<hr />
<div class="row">
    <div class="col-md-12 well">
        @using (Html.BeginForm("ChangeProfile2", "Employee", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3>Transfer Employes</h3>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div>
                    @Html.Label("Transfer employees between:" )

                </div>
                <div class="row">
                    <div class="text-center form-group col-md-6">
                        <h4>Manager A</h4>
                    </div>
                    <div class="text-center form-group col-md-6">
                        <h4>Manager B</h4>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "ViewEmployees")
</div>