
@{
    /**/

    ViewBag.Title = "ReadOnlyLineChart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    window.onload = function(){
        
        var dataPoints = [];
        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            theme: "light2",
            title: {
                text: "Vacation days per month"
            },
            axisY: {
                includeZero: false
            },
            data: [{
                type: "column",
                dataPoints: @Html.Raw(ViewBag.DataPoints)
            }]
        });
        chart.render();
        $('button').click(function plot() {
            var location1 = $("#location option:selected").val();
            var year1 = $("#year option:selected").val();
            var url = "@Url.Action("ReadOnlyLineChartJson","VacationRequest")";
            $.get(url, { year: year1, location: location1 }).done(function (data) {
                chart.options.data[0].dataPoints = data;
                chart.render();
            });
        });
    }
</script>

<br />
<br />
<div>
    <div class="container flexEnd">
        <div id="location" class="col-md-3 text-center">
            <b>Location: </b>
            <select>
                <option value="COLIMA" selected>Colima</option>
                <option value="MERIDA">Merida</option>
            </select>
        </div>
        <div id="year" class="col-md-2 text-right">
            <b>Year: </b>
            <select>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018" selected>2018</option>
            </select>
        </div>
        <div id="button" class="col-md-4 text-right">
            <button class="btn btn-primary">Generate Chart</button>
            <a class="btn btn-primary" href="@Url.Action("ReadOnlyAdmin", "VacationRequest")">
                Return to History
            </a>
        </div> <br />
    </div> <!-- container end -->
</div> <!-- form-group end -->

<br />

<div id="chartContainer" style="height: 370px; width: 100%;"></div>



@section Scripts {
    @Scripts.Render("~/Scripts/jquery-1.11.3.min.js")
    @Scripts.Render("~/Scripts/canvasjs.min.js")
}

<script type="text/javascript" src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>