@model PES.Models.VacHeadReqViewModel
<div>
    <section>
        <div class="page-header text-center">
            <h1>Vacation Request</h1>
        </div>
        <form id="form" class="form-horizontal">
            <div class="form-group">
                <div class="container flexEnd">
                    <div class="col-md-3">
                        <label for="title" class="control-label col-form-label">Request Title</label>
                        <div>
                            @if (ViewBag.status == "NEW")
                            {
                                <input id="title" type="text" class="form-control" data-val="true" data-val-required="Request title is required" />
                            }
                            else
                            {
                                <input id="title" type="text" class="form-control" value="@Model.title" 
                                       @{@(Model.status.ToLower() == "rejected" ? null : new { disabled = "disabled" })} 
                                       data-val="true" data-val-required="Request title is required"/>
                            }
                        </div>
                        <span class="field-validation-valid text-danger" data-valmsg-for="title" data-valmsg-replace="true"></span>
                    </div>
                    <div id="leadName" class="col-md-3">
                        <label for="lead" class="control-label">Lead Name</label>
                        <div>
                            @if (ViewBag.status == "NEW")
                            {
                                <input id="lead" type="text" class="form-control" data-val="true" data-val-required="Lead name is required" />
                            }
                            else
                            {
                                   <input id="lead" type="text" value="@Model.lead_name" 
                                   @{@(Model.status.ToLower() == "rejected" ? null : new { disabled = "disabled" })}
                                   class="form-control" data-val="true" data-val-required="Lead name is required"/>
                            }
                        </div>
                        <span class="field-validation-valid text-danger" data-valmsg-for="lead" data-valmsg-replace="true"></span>
                    </div>
                    <div id="reqStatus" class="col-md-6 text-right">
                        <label class="control-label text-center">
                            Request Status:
                        @if (ViewBag.status == "NEW")
                        {
                            <span class="label label-default" id="status">New</span>
                        }
                        else
                        {
                            <span class="label label-default" id="status">@Model.status</span>
                        }
                        </label>
                    </div>
                </div> <!-- container end -->
            </div> <!-- form-group end -->
            <div class="form-group">
                <div class="container">
                    <div id="vacationarea" class="col-md-2 text-center">
                        <label>
                            Vacation Days:
                            @if (ViewBag.status == "NEW")
                            {
                                <span class="label label-default" id="status">New</span>
                            }
                            else
                            {
                            <span id="daysVac" class="label label-default">@ViewBag.freedays</span>
                            }
                        </label>
                    </div>
                    <div id="requestarea" class="col-md-2 text-left">
                        <label>
                            Days Requested:
                            <span id="daysReq" class="label label-default">@Model.noVacDays</span>
                        </label>
                    </div>
                    <div id="checkarea" class="col-md-8 checkbox">
                        <label id="checktext">
                            <input type="checkbox" id="unpaid" checked="@(Convert.ToChar(Model.have_project) == 'N' ? "checked" : "")" @(Model.status.ToLower() == "rejected" ? null : new { disabled = "disabled" })/>I do not have a project
                        </label>
                    </div>
                </div> <!-- container end -->
            </div> <!-- form-group end -->

            <!-- PARTIAL VIEW WITH REQUEST DATES -->
            @Html.Partial("_VacationDatesPartial", Model)

            <div class="form-group">
                <div class="container">
                    <div class="col-md-4">
                        <span class="label label-warning">All vacations days must be in the same month</span>
                    </div>
                </div> <!-- container end -->
            </div><!-- form-group end -->
            <div class="form-group">
                <div class="container flexEnd">
                    <div class="col-md-8">
                        <label for="comments" class="control-label">Comments:</label>
                        <textarea class="form-control" style="min-width:100%;" rows="1" id="comments" placeholder="Add a comment or attach lead's approval" @(Model.status.ToLower() == "rejected" ? null : new { disabled = "disabled" })>@Model.comments</textarea>
                        <span class="field-validation-valid text-danger" data-valmsg-for="comments" data-valmsg-replace="true"></span>
                        @if (Model.status.ToLower() == "pending" || Model.status.ToLower() == "approved")
                        {
                            <textarea class="form-control" style="min-width:100%;" rows="1" id="comments" placeholder="Add a cancel reason (REQUIRED)"></textarea>
                        }
                        else if (Model.status.ToLower() == "rejected" || Model.status.ToLower() == "canceled")
                        {
                            <textarea class="form-control" style="min-width:100%;" rows="1" id="comments" disabled="disabled">@Model.replayComment</textarea>
                        }
                    </div>
                    <div class="col-md-4 text-center">
                        <!-- Alert Box -->
                        @if (Model.status.ToLower() == "pending" || Model.status.ToLower() == "approved")
                        {
                            <a href="@Url.Action("HistoricalResource", "VacationRequest")" class="btn btn-lg btn-default btn-block">Return to Historical</a>
                                <button id="cancelReq" type="button" class="btn btn-lg btn-primary btn-block" data-toggle="modal" data-target=".bs-example-modal-sm">Cancel</button>
                            @Html.Partial("_ModalCancelRequestPartial")
                        }
                        else if (Model.status.ToLower() == "rejected")
                        {
                            <a href="@Url.Action("HistoricalResource", "VacationRequest")" class="btn btn-lg btn-default btn-block">Return to Historical</a>
                            <button id="resendReq" type="button" class="btn btn-lg btn-primary btn-block" data-toggle="modal" data-target=".bs-example-modal-sm">Resend</button>
                        }
                    </div>
                </div> <!-- container end -->
            </div> <!-- form-group end -->
        </form>
    </section>
</div>

@section Styles
{
    @Styles.Render("~/Content/css/vacation_request_resource.css")
    @Styles.Render("~/content/themes/base/daterangepicker.css")
}

@section Scripts
{

    @Scripts.Render("~/Scripts/vacationsRequest.js")
    @Scripts.Render("~/Scripts/moment.js")
    @Scripts.Render("~/Scripts/daterangepicker.js")

}