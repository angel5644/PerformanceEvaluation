@model IEnumerable<PES.Models.Holiday>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<br/>

<!-- TABLE TO HOLIDAYS -->
@*<div id="datesGroups">
    <div id="datesGroup" class="form-group">
