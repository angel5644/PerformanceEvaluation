@model IEnumerable<PES.Models.Lateness>
@using PES.Models

<div class="row">
    <div class="col-md-6">
        <div class="text-right">
            Total lateness: @Model.Count()
        </div>
        <div class="well">
            <table class="table">
                @if (Model.Count() > 0)
                {
                    <tr>
                        <th>
                            DATE
                        </th>
                        <th class="text-center">
                            TIME
                        </th>
                    </tr>

                    foreach (var lateness in Model)
                    {
                        <tr>
                            <td>
                                @lateness.Date.ToString("dddd, MMMM dd, yyyy", new System.Globalization.CultureInfo("en-US"))
                            </td>
                            <td class="text-center">
                                @lateness.Date.ToString("hh:mm:ss tt")
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="text-center">
                            @if (ViewBag.period == null)
                {
                                <label>YOU DON'T HAVE ANY LATENESS FOR TODAY.</label>
                            }
                            else
                            {
                                <label>YOU DON'T HAVE ANY LATENESS FOR @ViewBag.period.</label>
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="col-md-6">
        Graphics
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <button type="button" class="btn btn-default btn-block">Excel</button>
    </div>
    <div class="col-md-2">
        <button type="button" class="btn btn-default btn-block">PDF</button>
    </div>
</div>