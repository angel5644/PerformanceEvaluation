@model PES.Models.Login
@{
    ViewBag.Title = "Login";
}

@if(TempData["Error"] != null)
{
    <p class="alert alert-danger">@TempData["Error"]</p>
}
<div class="jumbotron">
    @using (Html.BeginForm("Login", "LoginUser", FormMethod.Post, new {@class="form-horizontal"}))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <div class="form-group">
                <label for="UserEmail" class="col-md-2 control-label">Email</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(u => u.UserEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.UserEmail, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="Password" class="col-md-2 control-label">Password</label>
                <div class="col-md-10">
                    @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Sign in</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")    
}


