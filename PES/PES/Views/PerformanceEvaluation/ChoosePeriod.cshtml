@model IEnumerable<PES.Models.EmployeeChoosePeriodViewModel>
    @using PES.Models
    @{
        ViewBag.Title = "Period";

        string userEmail = ViewBag.UserEmail != null ? (string)ViewBag.UserEmail : "";
        int userID = ViewBag.UserID != null ? (int)ViewBag.UserID : 0;
    }
    <p class="text-right">
        <a href="@Url.Action("Logout","LoginUser")">Logout</a>
    </p>
    <div>
        <h2 class="text-center col-md-12">Performance Evaluation System</h2>
        <h3 class="text-center">@userEmail</h3>
    </div>
    <div>
        <br />
        <div>
            <table border="1" width="100" class="table table-striped">
                <thead>
                <tr>
                    <th id="Header_Period">Period</th>
                    <th id="Header_Score">Score</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var scoreM in Model)
                    {
                        if (userID == @scoreM.employeeid)
                        { 
                            <tr>
                                <td>@scoreM.pesid</td>
                                <td>@scoreM.totalEvaluation</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
