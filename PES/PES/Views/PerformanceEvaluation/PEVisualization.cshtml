        @Html.Partial("_SkillsPartial", Model.PerformanceSkills)
    </div>
</div>

@section Styles
{
    @Styles.Render("~/Content/datatables/dataTables.bootstrap.min.css")
}


@section Scripts
{
    @Scripts.Render("~/Scripts/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/dataTables.bootstrap.min.js")

    <script type="text/javascript">
        $(document).ready(function () {
            var tableOptions = {
                dom: '<"row"<"col-md-6"><"col-md-6"f>>rtip',
                pageLength: -1
            };
            $('#TableSections').DataTable(tableOptions);
            //$('#TableComments').DataTable(tableOptions);
            $('#TableSkills').DataTable(tableOptions);
        });
    </script>
}
