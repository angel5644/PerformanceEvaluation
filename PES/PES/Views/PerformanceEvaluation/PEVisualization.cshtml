@model PES.ViewModels.PEVisualizationViewModel
<hr />
<div class="row">
    <div class="col-md-12">
        @Html.Partial("_PerformanceMainPartial", Model.PerformanceMain)
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <h3>Sections</h3>
        <hr />
        @Html.Partial("_SectionsPartial", Model.PerformanceSections)
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <h3>Comments</h3>
        <hr />
        @Html.Partial("_CommentsPartial", Model.PerformanceComments)
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <h3>Leading / Mentoring Skills</h3>
